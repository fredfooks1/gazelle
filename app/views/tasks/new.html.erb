<div class="container">
  <div class="row">
     <div class="col-xs-6">
        <div class="wrapper-new-gazelle">
          <h1>Create a new task</h1>
           <%= render 'form', task: @task %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="map-box-gazelles text-center">
          <h4>Gazelle Map</h4>
          <div id="map-gazelle"
          data-markers="<%= @markers.to_json %>"
          data-company="<%= @company_marker.to_json %>"
          data-gazelles="<%= @names_for_gazelles.to_json %>">
          </div>
        </div>
      </div>
  </div>
</div>



