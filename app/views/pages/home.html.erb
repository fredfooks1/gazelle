<div class="container">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <% if current_user && current_user.company %>
        <%= form_tag(new_company_task_path(current_user.company), method: "get", class: "form-inline") do%>
          <div class="home-search-container shared-search-container">
          <%= text_field_tag :search, params[:search], placeholder: "Search Tasks", class: "search-bar" %>
          <%= submit_tag "Search", :name => nil, class: "search-btn" %>
          </div>
        <% end %>
        <% else %>
          <h1>Welcome to Gazelle</h1>
      <% end %>
    </div>
  </div>
</div>
