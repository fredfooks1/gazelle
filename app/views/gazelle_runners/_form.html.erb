<%= simple_form_for(@gazelle_runner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :photo %>

  <%= f.button :submit, "Submit", class: "btn-solid" %>

<% end %>
